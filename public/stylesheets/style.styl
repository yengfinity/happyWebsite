.r_arrow_box
  position relative
  background #79dea8
  border 4px solid #c2e1f5
  width 65%
  float left
  margin 2.5em 5em 10em 0
  &:after
    border-color rgba(136,183,213,0)
    border-left-color #79dea8
    border-width 30px
    margin-top -30px
    float right
  &:before
    border-color rgba(194,225,245,0)
    border-left-color #c2e1f5
    border-width 36px
    margin-top -36px

.r_arrow_box:after,
.r_arrow_box:before
  left 100%
  top 50%
  border solid transparent
  content " "
  height 0
  width 0
  position absolute
  pointer-events none

.l_arrow_box
  position relative
  background #88b7d5
  border 4px solid #c2e1f5
  width 75%
  float right
  margin 2.5em 5em 10em 0
  &:after
    border-color rgba(136,183,213,0)
    border-right-color #88b7d5
    border-width 30px
    margin-top -30px
  &:before
    border-color rgba(194,225,245,0)
    border-right-color #c2e1f5
    border-width 36px
    margin-top -36px

.l_arrow_box:after,
.arrow_box:before
  right 100%
  top 50%
  border solid transparent
  content " "
  height 0
  width 0
  position absolute
  pointer-events none

